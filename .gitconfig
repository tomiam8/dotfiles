[core]
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol,space-before-tab
    tabwidth=4
    excludesfile = ~/.gitignore
[init]
	defaultBranch = main
[color]
	ui = true
[color "branch"]
	current = yellow bold
	local = green bold
	remote = cyan bold
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold
